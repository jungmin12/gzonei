@charset "utf-8";


#banner{position: relative;width:100%;height:90px;background: #f5f5f5;text-align:center;}
#banner li{display:inline-block;color:#fff;}
#banner li a{display:block;position:relative;padding:0 20px;line-height:90px;color: #333333;font-size: 18px;}
#banner li a:before{position:absolute;left:0;top:50%;width:1px;height:13px;background: #e0e0e0;transform:translateY(-50%);content:'';}
#banner li:first-child a:before{display:none;}


/* 풋터 */
#foot_layout {overflow: hidden;position: relative;clear: both;padding: 60px 0 40px;background: #fff;}
#foot_layout:before{position:absolute;left: 50%;top: -290px;z-index: -1;width:1920px;height:407px;transform: translateX(-50%);content:'';}
#foot_layout .layout{}
#foot_layout .logo{display:none;width:91px;height:68px;margin-bottom: 20px;background:url(../images/common/flogo.png);background-size: 100%;font-size:0;}
#foot_layout address {display: block;padding-top:0;color: #adadad;font-size: 14px;line-height:1.3;}
#foot_layout address span{position:relative;display:inline-block;padding-left:10px;color:#222;}
#foot_layout address span:before{content:'';position:absolute;top:5px;left:5px;width:1px;height:10px;display:block;background-color:#ddd;}
#foot_layout .mark { position: absolute; top: 0; right: 0;border-radius:6px;overflow:hidden;}
#foot_layout .mark a {margin-left: 10px;}
#foot_layout .copy{display: block;margin-top: 5px;color: #666666;font-size: 14px;line-height: 1.4;}
#foot_layout p{color: #545454;font-size: 13px;letter-spacing: -0.05em;}
#foot_layout p span{display:inline-block;position: relative;padding-right: 20px;font-size:15px;color: #666666;vertical-align: top;}
#foot_layout p span:after{position:absolute;right: 8px;top: 7px;width:1px;height:13px;background:#6b6b6b;content:'';}
#foot_layout p span:last-child:after{display:none;}
#foot_layout .qna{position:absolute;right:0;top: -30px;width:242px;height:147px;border-radius:10px;border:1px solid #797979;}
#foot_layout .qna strong{display:block;padding: 0 20px;font-size:15px;color: #545454;line-height:50px;border-bottom:1px solid #797979;text-align: left;font-weight: bold;}
#foot_layout .qna strong:before{display:inline-block;width:24px;height:24px;margin-right: 5px;background: url(../images/common/common_ir.png) -63px -26px;vertical-align: middle;content:'';}
#foot_layout .qna .txt{padding:0 20px}
#foot_layout .qna b{display:block;font-size:24px;color: #545454;line-height:50px;}
#foot_layout .qna p em{display:inline-block;width: 80px;margin-right: 3px;line-height:24px;border:1px solid #797979;font-size: 12px;text-align: center;color: #545454;}

#btnTop{position: fixed;font-size:0;width:60px;height:60px;background-color: #fff;background-image: url();box-sizing: border-box;border:1px #000 solid;right:80px;bottom:40px;border-radius: 50%;z-index:5;opacity:0;}
#btnTop:before{content:'';position: absolute;width:36px;height:36px;left:50%;top:50%;margin-left:-18px;margin-top:-18px;background-image: url('../images/common/top_btn.png');transform: rotate(90deg);}

@media screen and (max-width: 1479px){
  #btnTop{right:30px;}
  
    #foot_layout{padding: 50px 0 90px;}
    #foot_layout .qna{position:relative;right:auto;top: auto;bottom:auto;width:439px;height: 118px;margin-top:30px;}
    #foot_layout .qna .txt{padding-top:6px}
    #foot_layout .qna p{position:absolute;right: 30px;bottom: 20px;}
}
@media screen and (max-width:1023px){
  #banner li a{font-size:16px;}
  
  #foot_layout .tel{position:static;margin: 22px 0;text-align:center;}
  #foot_layout .layout{}
  #foot_layout .flogo {display:none;}
  #foot_layout .mark {position: relative; top: auto; right: auto;margin-top:10px;text-align:center;}
  #foot_layout .copy{}
  #foot_layout address{text-align:center;}
  #foot_layout p span{padding-right:15px;}
  #foot_layout p span:after{right: 6px;}
}
@media screen and (max-width:767px){

    #banner{height: auto;padding: 35px 0 30px;text-align:left;}
    #banner li{float:left;width: 48%;margin-bottom:5px;}
    #banner li a{padding: 0 10px;line-height: 1.2;font-size: 15px;letter-spacing: -0.05em;}
    #banner li:nth-child(1) a,
    #banner li:nth-child(3) a,
    #banner li:nth-child(5) a{padding-left:0;}
    #banner li:nth-child(3) a:before,
    #banner li:nth-child(5) a:before{display:none;}
    
  #foot_layout{padding-bottom:40px;}
  #foot_layout .logo{width:58px;height:44px;}
  #foot_layout p span{font-size:14px;}
  #foot_layout address{margin-top:20px;font-size: 13px;}
  #foot_layout .tel{margin:15px 0}
  #foot_layout .tel span{margin:0;font-size: 13px;line-height: 1.2;}
  #foot_layout .qna{width:248px;height: 148px;}
  #foot_layout .qna b{line-height:2}
  #foot_layout .qna p{position:relative;right:auto;bottom: auto;margin: 0;}
}